<?xml version="1.0"?>
<launch>
    
    <arg name="rviz_mode" default="false"/>

    <!-- load joint_names as defined in XACRO in dorna_description-->
    <rosparam command="load" file="$(find dorna_moveit_config)/config/joints_names.yaml"/>
    
    <!-- This is a file auto generated by the moveit setup DO NOT TOUCH -->
    <include file="$(find dorna_moveit_config)/launch/planning_context.launch">
        <arg name="load_robot_description" value="true"/>
    </include>

    <!-- publish messages to joint names -->
    <node name="joint_state_publisher_moveit" pkg="joint_state_publisher" type="joint_state_publisher">
        <param name="use_gui" value="false"/>
        <rosparam param="/source_list">[/dorna/joint_states]</rosparam>
    </node>

    <!-- This is a file auto generated by the moveit setup DO NOT TOUCH -->
    <include file="$(find dorna_moveit_config)/launch/move_group.launch">
        <arg name="publish_monitored_planning_scene" value="true"/>
    </include>

    <!-- This launches the rviz visualization and gui to control moveit  (NOT NECESSARY)-->
    <include if="$(arg rviz_mode)" file="$(find dorna_moveit_config)/launch/moveit_rviz.launch">
        <arg name="config" value="true"/>
    </include>
</launch>